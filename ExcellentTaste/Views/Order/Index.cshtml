@model IEnumerable<ExcellentTaste.Models.Order>
@using ExcellentTaste.Extensions;
@{
    ViewBag.Title = "Index";
}

<h2>Bestellingen</h2>

<p>
    @Html.ActionLink("Creëer Nieuw bestelling", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Done)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Done)
            </td>
            <td>
                @Html.ActionLink("Aanpassen", "Edit", new { id = item.OrderID }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderID }) |
                @Html.ActionLink("Verwijderen", "Delete", new { id = item.OrderID })
            </td>
        </tr>
    }

</table>
